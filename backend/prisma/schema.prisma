generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  email             String   @unique
  passwordHash      String
  bucks             Int      @default(0)
  selectedCharacterId Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  tasks     Task[]
  sessions  Session[]
  groups    Group[] // Keep for now if needed, or remove if legacy
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  members   User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  completed   Boolean  @default(false)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
}

model Session {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id])
  durationMinutes Int
  sessionType     String   @default("POMODORO") // POMODORO, SHORT_BREAK, LONG_BREAK
  completedAt     DateTime @default(now())
}

model GroupTask {
  id          Int      @id @default(autoincrement())
  description String
  numTask     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}
