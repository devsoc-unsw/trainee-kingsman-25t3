generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  email     String   @unique
  password  String
  groups    Group[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  individualTasks IndividualTask[]
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  members   User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IndividualTask {
  id          Int      @id @default(autoincrement())
  createdBy   User     @relation(fields: [userId], references: [id])
  userId      Int
  description String
  done        Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}

model GroupTask {
  id          Int      @id @default(autoincrement())
  description String
  numTask     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}
