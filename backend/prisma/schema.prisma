generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  email             String   @unique
  password          String
  bucks             Int      @default(0)
  streak            Int      @default(0)
  selectedCharacterId Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  tasks       Task[]
  sessions    Session[]
  groups      Group[]
  userPlants  UserPlant[]
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  members   User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  completed   Boolean  @default(false)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
}

model Session {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  duration    Int      // Duration in minutes
  type        String   @default("POMODORO") // POMODORO, SHORT_BREAK, LONG_BREAK
  done        Boolean  @default(false)
  completedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GroupTask {
  id          Int      @id @default(autoincrement())
  description String
  numTask     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}

model Plant {
  id          Int         @id @default(autoincrement())
  name        String
  imageUrl    String?
  rarity      String
  value       Int
  userPlants  UserPlant[]
}

model UserPlant {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  plant       Plant     @relation(fields: [plantId], references: [id])
  plantId     Int
  position    Int       // Grid position index (0-8 or similar)
  plantedAt   DateTime  @default(now())
}
