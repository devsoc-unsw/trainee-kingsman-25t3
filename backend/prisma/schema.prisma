generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   
  email     String   @unique
  password  String
  groups    Group[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  individualTasks IndividualTask[]
  sessions  Session[]
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String
  members   User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model IndividualTask {
  id          Int      @id @default(autoincrement())
  createdBy   User     @relation(fields: [userId], references: [id])
  userId      Int
  description String
  done        Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}

model GroupTask {
  id          Int      @id @default(autoincrement())
  description String
  numTask     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt 
}

model Session {
  id          Int      @id @default(autoincrement())
  createdBy   User     @relation(fields: [userId], references: [id])
  userId      Int
  done        Boolean
  duration    Int
  createdAt   DateTime @default(now())
  type        String
}

model Plant {
  id          Int       @id @default(autoincrement())
  name        String
  imageUrl    String?
  rarity      String
  value       Int
  userPlants  UserPlant[]
}

model UserPlant {
  id          Int       @id @default(autoincrement())
  createdBy   User      @relation(fields: [userId], references: [id])
  userId      Int
  plant       Plant     @relation(fields: [plantId], references: [id])
  plantId     Int
  position    String?
  plantedAt   DateTime  @default(now())
}